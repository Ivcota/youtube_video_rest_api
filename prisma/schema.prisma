// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int        @id @default(autoincrement())
  name      String
  email     String     @unique
  password  String
  playlists Playlist[]
  videos    Video[]
}

model Playlist {
  id     Int     @id @default(autoincrement())
  title  String
  desc   String?
  videos Video[]
  User   User?   @relation(fields: [userId], references: [id])
  userId Int?
}

model Video {
  id         Int       @id @default(autoincrement())
  title      String
  desc       String?
  url        String
  Playlist   Playlist? @relation(fields: [playlistId], references: [id])
  playlistId Int?
  User       User?     @relation(fields: [userId], references: [id])
  userId     Int?
}
